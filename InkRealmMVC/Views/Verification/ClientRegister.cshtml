@model ClientRegister
@{
    ViewData["Title"] = "Регистрация";
    string labelsClasses = "form-label mt-2";
    string formsClasses = "form-control mb-2";
}
<form asp-controller="Verification" asp-action="ClientRegister" method="post">
    <label class=@labelsClasses asp-for="Login">Введите логин*</label>
    <input class=@formsClasses type="text"   asp-for="Login" placeholder="Логин"/>

    <label class=@labelsClasses asp-for="Password">Введите пароль*</label>
    <input class=@formsClasses type="password"   asp-for="Password" placeholder="Пароль"/>
    <p class="form-control-plaintext text-info text-center p-3 fs-6">Учтите, что пароль должен состоять из 8 символов среди которых должна быть хотя бы одна цифра, заглавная и прописная буква.</p>
    
    <label class=@labelsClasses for="PasswordCheck">Повторите пароль*</label>
    <input class=@formsClasses id="PasswordCheck"   type="password" placeholder="Повторение пароля"/>

    <label class=@labelsClasses asp-for="FirstName">Введите имя*</label>
    <input class=@formsClasses type="text"   asp-for="FirstName" placeholder="Иван"/>

    <label class=@labelsClasses asp-for="Surname">Введите фамилию*</label>
    <input class=@formsClasses type="text"   asp-for="Surname" placeholder="Иванов"/>

    <label class=@labelsClasses asp-for="FatherName">Введите отчество</label>
    <input class=@formsClasses type="text" asp-for="FatherName" placeholder="Иваныч"/>

    <label class=@labelsClasses asp-for="MobilePhone">Введите номер телефона</label>
    <input class=@formsClasses type="tel" asp-for="MobilePhone" placeholder="+7 (999) 999-99-99"/>

    <label class=@labelsClasses asp-for="Email">Введите почту*</label>
    <input class=@formsClasses type="email" asp-for="Email"   placeholder="abra@codabra.com"/>

    <input id="Submit" class="mt-3 form-control btn btn-danger disabled" type="submit" value="Зарегистрироваться" />
</form>

@section Scripts{
    <script src="~/ts/client_reg.js"></script>
}
